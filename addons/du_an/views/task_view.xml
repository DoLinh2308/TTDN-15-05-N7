<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_task_form" model="ir.ui.view">
            <field name="name">project_task</field>
            <field name="model">project_task</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_read_only" style="font-size:25px">Thông tin Nhiệm Vụ</div>
                        <group col="4" string="Chi tiết nhiệm vụ">
                            <field name="name"/>
                            <field name="project_id"/>
                            <field name="employee_id"/> 
                            <field name="deadline"/>
                            <field name="status"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_task_tree" model="ir.ui.view">
            <field name="name">project_task</field>
            <field name="model">project_task</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="employee_id"/>  
                    <field name="deadline"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="project_task_search">
            <field name="model">project_task</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="status"/>
                    <field name="employee_id"/>  
                </search>
            </field>
        </record>

        <record id="action_task" model="ir.actions.act_window">
            <field name="name">Nhiệm vụ</field>
            <field name="res_model">project_task</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="project_task_search"/>
        </record>
    </data>
</odoo>
